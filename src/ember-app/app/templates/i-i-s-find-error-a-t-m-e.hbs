<h3 class="ui header">{{t "forms.i-i-s-find-error-a-t-m-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.adress
      class=(if (v-get validationModel "adress" "isInvalid") "error")
      label=(t "forms.i-i-s-find-error-a-t-m-e.adress-caption")
      data-test-i-i-s-find-error-a-t-m-e-adress=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "adress" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.mangedBy
      class=(if (v-get validationModel "mangedBy" "isInvalid") "error")
      label=(t "forms.i-i-s-find-error-a-t-m-e.mangedBy-caption")
      data-test-i-i-s-find-error-a-t-m-e-mangedBy=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "mangedBy" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-find-error-a-t-m-e.bank-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.bank
      displayAttributeName="name"
      autocomplete=true
      relationName="bank"
      projection="BankL"
      title=(t "forms.i-i-s-find-error-a-t-m-e.bank-caption")
      readonly=readonly
      componentName="bankLookup"
      class=(if (v-get validationModel "bank" "isInvalid") "error")
      data-test-i-i-s-find-error-a-t-m-e-bank=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "bank" "message")}}
  </div>
</form>
